<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp" >

    <ImageView
        android:id="@+id/ivInvisableBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/dot"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/ivVisableBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/dot"  />

    <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:visibility="visible">

<!--tmp-->
    <!--<ScrollView-->
        <!--android:id="@+id/svScroll"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="0.9"-->
        <!--android:visibility="visible">-->




        <LinearLayout
            android:id="@+id/llPanelRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/llPanelRoot2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvPageTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0017c9"
                    android:text="@string/radyab"
                    android:textSize="60dp" />

                <TextView
                    android:id="@+id/tvTitleText01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="right|center"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:text="@string/radyabComment"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TableLayout
                    android:id="@+id/tblLoginPanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:paddingTop="10dp"
                            android:foregroundGravity="right"
                            android:gravity="right"
                            android:text="مشخصه دستگاه"
                            android:textColor="@android:color/white"
                            android:textSize="17dp"
                            android:textStyle="bold" />


                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="0.5"
                            android:adjustViewBounds="true"
                            android:ems="8"
                            android:gravity="center"
                            android:imeOptions="flagNoExtractUi"
                            android:hint="@string/someText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_weight="0.5" />
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_weight="0.5"
                            android:text="@string/cancel" />
                    </LinearLayout>

                    <ir.sajjadyosefi.android.tubeless.view.widget.JustifiedPersianTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="right|center"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:foregroundGravity="right"
                        android:gravity="right"
                        android:text="باید مشخصه دستگاه فرسستنده را ثبت کنید."
                        android:textColor="@android:color/white"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:paddingTop="10dp"
                            android:foregroundGravity="right"
                            android:gravity="right"
                            android:text="تعداد دستگاه فرستنده"
                            android:textColor="@android:color/white"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:paddingTop="10dp"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:textSize="17dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:paddingTop="10dp"
                            android:foregroundGravity="right"
                            android:gravity="right"
                            android:text="تعداد دستگاه فرستنده"
                            android:textColor="@android:color/white"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:paddingTop="10dp"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:textSize="17dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_weight="0.5" />
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_weight="0.5"
                            android:text="@string/cancel" />
                    </LinearLayout>

                    <ir.sajjadyosefi.android.tubeless.view.widget.JustifiedPersianTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="right|center"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:foregroundGravity="right"
                        android:gravity="right"
                        android:text="باید مشخصه دستگاه فرسستنده را ثبت کنید."
                        android:textColor="@android:color/white"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/llRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvField1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:paddingTop="10dp"
                            android:foregroundGravity="right"
                            android:gravity="right"
                            android:text="منتظر باشید"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="17dp"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/etField1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="0.5"
                            android:adjustViewBounds="true"
                            android:ems="8"
                            android:gravity="center"
                            android:imeOptions="flagNoExtractUi"
                            android:hint="@string/someText" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvField2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_gravity="right|center"
                            android:clickable="true"
                            android:paddingTop="10dp"
                            android:foregroundGravity="right"
                            android:gravity="right"
                            android:text="منتظر باشید"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etField2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="0.5"
                            android:adjustViewBounds="true"
                            android:textDirection="anyRtl"
                            android:gravity="center"
                            android:ems="8"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textPersonName"
                            android:hint="@string/someText" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvField3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:layout_weight="0.5"
                            android:paddingTop="10dp"
                            android:foregroundGravity="right"
                            android:gravity="right"
                            android:text="منتظر باشید"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etField3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_gravity="left"
                            android:adjustViewBounds="true"
                            android:elevation="1dp"
                            android:ems="8"
                            android:gravity="center"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textPersonName"
                            android:hint="@string/someText" />
                    </LinearLayout>

                    <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
                        android:id="@+id/PBSjd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:radius="5dp"
                        android:color="#2980b9"
                        app:dd_numDots="5"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        app:dd_scaleMultiplier="2"
                        app:dd_animationDuration="500"
                        app:dd_horizontalSpacing="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true" />



                    <ir.sajjadyosefi.android.tubeless.view.widget.JustifiedPersianTextView
                        android:id="@+id/tvFooterText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="right|center"
                        android:clickable="true"
                        android:elevation="1dp"
                        android:foregroundGravity="right"
                        android:gravity="right"
                        android:text="صفحه ورود/ثبت نام/فراموشی رمز/تغییر رمر"
                        android:textColor="@android:color/white"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_weight="0.5"
                            android:text="btn1" />

                        <Button
                            android:id="@+id/btn2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_weight="0.5"
                            android:text="btn2" />


                    </LinearLayout>


                </TableLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</FrameLayout>
