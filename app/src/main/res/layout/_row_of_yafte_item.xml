<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="right"
    android:background="@color/day_white_text"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background"
        android:orientation="vertical"
        android:padding="2dp">

        <include
            layout="@layout/_part_user_avatar_layout">
        </include>


        <LinearLayout
            android:id="@+id/linearLayoutCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include
                layout="@layout/_part_horizontal_line"></include>

            <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:textColor="@color/day_title"
                android:text="عنوان"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="19dp"
                android:textStyle="bold" />

            <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                android:id="@+id/textViewStatment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:textColor="@color/day_content_text"
                android:text="متن کوتاه"
                android:textSize="17dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                android:id="@+id/textViewStatment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:textColor="@color/day_content_text"
                android:text="متن ثانوی"
                android:textAppearance="?android:attr/textAppearanceSmall"  />

            <include
                layout="@layout/_part_horizontal_line"></include>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <include
                layout="@layout/_part_visit_count"></include>
            <include
                layout="@layout/_part_share_layout"></include>
            <include
                layout="@layout/_part_admin_remove"></include>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>