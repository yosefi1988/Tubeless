<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp" >

    <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:visibility="visible">

        <!--tmp-->
        <!--<ScrollView-->
        <!--android:id="@+id/svScroll"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="0.9"-->
        <!--android:visibility="visible">-->




        <LinearLayout
            android:id="@+id/llPanelRoot2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0017c9"
                android:text="ردیــــــــــــــاب"
                android:textSize="60dp" />


            <TableLayout
                android:id="@+id/tblLoginPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:padding="10dp">


                <LinearLayout
                    android:id="@+id/llRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvField1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="0.5"
                        android:clickable="true"
                        android:foregroundGravity="right"
                        android:gravity="right"
                        android:paddingTop="10dp"
                        android:text="شماره موبایل ردیاب "
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="17dp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/etField1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:ems="8"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:gravity="center"
                        android:hint="@string/someText"
                        android:imeOptions="flagNoExtractUi" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvField2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="0.5"
                        android:clickable="true"
                        android:foregroundGravity="right"
                        android:gravity="right"
                        android:paddingTop="10dp"
                        android:text="کد معرفی ردیاب "
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="17dp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/etField2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:ems="8"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:gravity="center"
                        android:hint="@string/someText"
                        android:imeOptions="flagNoExtractUi" />

                </LinearLayout>


                <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
                    android:id="@+id/PBSjd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:color="#2980b9"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:radius="5dp"
                    app:dd_animationDuration="500"
                    app:dd_horizontalSpacing="8dp"
                    app:dd_numDots="5"
                    app:dd_scaleMultiplier="2" />

                <ir.sajjadyosefi.android.tubeless.view.widget.JustifiedPersianTextView
                    android:id="@+id/tvFooterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="right|center"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:text="یک پیامک ارسال میکنیم بهش و پاسخ میده"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="0.5"
                        android:text="ارسال" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="0.5"
                        android:text="اصراف" />


                </LinearLayout>


            </TableLayout>

        </LinearLayout>

    </ScrollView>



</FrameLayout>
