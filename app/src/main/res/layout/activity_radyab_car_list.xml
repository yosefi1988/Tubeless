<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp" >

    <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!--tmp-->
        <!--<ScrollView-->
        <!--android:id="@+id/svScroll"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="0.9"-->
        <!--android:visibility="visible">-->




        <LinearLayout
            android:id="@+id/llPanelRoot2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0017c9"
                android:gravity="center"
                android:text="ردیــــــــــــــاب"
                android:textSize="60dp" />


            <TableLayout
                android:id="@+id/tblLoginPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layoutDirection="rtl" >


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewRadyabCars"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"  />

                <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
                    android:id="@+id/PBSjd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:color="#2980b9"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:radius="5dp"
                    app:dd_animationDuration="500"
                    app:dd_horizontalSpacing="8dp"
                    app:dd_numDots="5"
                    app:dd_scaleMultiplier="2" />

                <ir.sajjadyosefi.android.tubeless.view.widget.JustifiedPersianTextView
                    android:id="@+id/tvFooterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="right|center"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:text="یک پیامک ارسال میکنیم بهش و پاسخ میده"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="0.5"
                        android:text="ثبت ماشین جدید" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="0.5"
                        android:text="بازگشت" />


                </LinearLayout>


            </TableLayout>

        </LinearLayout>

    </ScrollView>



</FrameLayout>
