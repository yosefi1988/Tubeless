<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"  >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/jpg_back1" />

    <ImageView
        android:id="@+id/ivVisableBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/day_dark_transparent"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:id="@+id/linearLayoutChangePassword"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/circle_background_glass"
                android:orientation="vertical" >

                <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/changePassword"
                    android:layout_marginTop="10dp"
                    android:textSize="35dp" />

                <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:visibility="gone"
                    android:text="@string/changePasswordTitle"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_changePassword_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:padding="5dp"
                    android:hint="@string/newPassword" />

                <EditText
                    android:id="@+id/editText_changePassword_repassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:hint="@string/rePassword" />


                <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/changePasswordText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ir.sajjadyosefi.android.tubeless.view.widget.view.ButtonPlus
                        android:id="@+id/button_changePassword_reg"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:paddingTop="5dp"
                        android:text="@string/reg" />

                    <ir.sajjadyosefi.android.tubeless.view.widget.view.ButtonPlus
                        android:id="@+id/button_changePassword_cancel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:paddingTop="5dp"
                        android:text="@string/cancel" />


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutForgetPassword"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/circle_background_glass"
                android:orientation="vertical" >

                <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/forgetPassword"
                    android:layout_marginTop="10dp"
                    android:textSize="35dp" />

                <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:visibility="gone"
                    android:text="@string/loginText"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_ForgetPassword_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:padding="5dp"
                    android:hint="@string/emailAddress" />


                <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/forgetPasswordText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ir.sajjadyosefi.android.tubeless.view.widget.view.ButtonPlus
                        android:id="@+id/button_ForgetPassword_reg"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:paddingTop="5dp"
                        android:text="@string/reg" />

                    <ir.sajjadyosefi.android.tubeless.view.widget.view.ButtonPlus
                        android:id="@+id/button_ForgetPassword_cacel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:paddingTop="5dp"
                        android:text="@string/cancel" />


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutLogin"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/circle_background_glass"
                android:orientation="vertical" >

                <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:layout_marginTop="10dp"
                    android:textSize="35dp" />

                <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:visibility="gone"
                    android:text="@string/loginText"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_login_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:padding="5dp"
                    android:hint="@string/mobile_number" />

                <EditText
                    android:id="@+id/editText_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:hint="@string/password" />


                <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/loginText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ir.sajjadyosefi.android.tubeless.view.widget.view.ButtonPlus
                        android:id="@+id/button_login_login"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:paddingTop="5dp"
                        android:text="@string/login" />

                    <ir.sajjadyosefi.android.tubeless.view.widget.view.ButtonPlus
                        android:id="@+id/button_login_cancel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:paddingTop="5dp"
                        android:text="@string/cancel" />


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutRegister"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:visibility="visible"
                android:gravity="center"
                android:background="@drawable/circle_background_glass"
                android:orientation="vertical" >

                <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome"
                    android:layout_marginTop="10dp"
                    android:textSize="35dp" />

                <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/registerTitle"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_register_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:padding="5dp"
                    android:hint="@string/mobile_number" />

                <EditText
                    android:id="@+id/editText_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:hint="@string/password" />


                <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                    android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/registerText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <ir.sajjadyosefi.android.tubeless.view.widget.view.ButtonPlus
                        android:id="@+id/button_register_reg"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.7"
                        android:paddingTop="5dp"
                        android:text="@string/accept_and_register" />

                    <ir.sajjadyosefi.android.tubeless.view.widget.view.ButtonPlus
                        android:id="@+id/button_register_cancel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.3"
                        android:paddingTop="5dp"
                        android:text="@string/cancel" />


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>



    <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
        android:id="@+id/PBSjd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:radius="5dp"
        android:color="#2980b9"
        app:dd_numDots="5"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:dd_scaleMultiplier="2"
        app:dd_animationDuration="500"
        app:dd_horizontalSpacing="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</FrameLayout>
