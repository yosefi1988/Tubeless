<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="right"
    android:background="#efefef"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background"
        android:padding="2dp">


        <!--profile-->
        <!--https://github.com/dmallcott/DismissibleImageView?utm_source=android-arsenal.com&utm_medium=referral&utm_campaign=5766-->
        <!--<com.dmallcott.dismissibleimageview.DismissibleImageView-->
            <!--android:id="@+id/imageViewNotice2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="right|center_vertical"-->
            <!--android:src="@drawable/png_car"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:layout_margin="5dp"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:visibility="gone"/>-->

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewUserAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="7dp"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                android:id="@+id/textViewUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:paddingRight="10dp"
                android:text="@string/app_name"
                android:textSize="17dp" />
        </LinearLayout>

        <View
            android:id="@+id/viewHorizontalLine2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textViewStatment2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#c0c0c0"
            android:visibility="gone" />


        <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
            android:id="@+id/textViewTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout4"
            android:gravity="right"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="نمایندگی ها"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="17dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
            android:id="@+id/textViewStatment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewTitle2"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="نمایندگی ها"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="17dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/jpg_back2"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/linearLayout42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewTitle"
            android:layout_gravity="right"
            android:gravity="right"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@android:drawable/ic_menu_view" />

            <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                android:id="@+id/textViewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:paddingRight="10dp"
                android:text="156"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/imageViewShare"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_share" />

            <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                android:id="@+id/textViewShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:paddingRight="10dp"
                android:text="بازنشر"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/imageViewFavourite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                app:srcCompat="@android:drawable/btn_star_big_off" />

            <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
                android:id="@+id/textViewFavourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:paddingRight="10dp"
                android:text="منتخب"
                android:textSize="17dp" />
        </LinearLayout>

        <View
            android:id="@+id/viewHorizontalLine"
            android:layout_below="@+id/linearLayout42"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>


        <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout42"
            android:gravity="right"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="نمایندگی ها"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ir.sajjadyosefi.android.tubeless.view.widget.view.PersianTextView
            android:id="@+id/textViewStatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewTitle"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="نمایندگی ها"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="17dp" />
    </RelativeLayout>

</LinearLayout>