<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_width="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_width="match_parent" >

        <ImageView
            android:id="@+id/imageViewPicture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/jpg_back2"  />

        <TextView
            android:id="@+id/textViewPicture"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="یح"
            android:textSize="23dp"
            android:background="@drawable/circle_background_x"
            android:textAlignment="center"
            android:textStyle="bold"   />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:padding="5dp"
                android:ellipsize="end"
                android:tooltipText="@string/countinue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="-15dp"
                android:text="@string/date"
                android:textSize="@dimen/xTextViewSmallSize"
                android:textColor="@color/colorTextGry"  />
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:padding="10dp"
                android:textSize="@dimen/xTextViewSmallSize"
                android:text="@string/text"
                android:visibility="gone"
                android:textColor="@color/colorTextGry"  />

            <LinearLayout
                android:id="@id/linearLayout"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/_part_visit_count"></include>

                <include
                    layout="@layout/_part_share_layout"></include>

                <include
                    layout="@layout/_part_content_report_layout"></include>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutBottomAdmin"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <include
                    layout="@layout/_part_admin_remove"></include>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <include
        android:layout_marginTop="4dp"
        layout="@layout/_part_horizontal_line"
        android:layout_height="1dp"
        android:layout_width="match_parent"></include>
</LinearLayout>
