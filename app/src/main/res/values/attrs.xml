<resources>

    <declare-styleable name="CustomImageview">
        <attr name="widthAndHeightRatio" format="float" />
    </declare-styleable>


    <declare-styleable name="CustomInputText">
        <attr name="lengthInputIX" format="integer"/>
        <attr name="modeIIX" format="integer">
            <enum name="text" value="0"/>
            <enum name="number" value="1"/>
            <enum name="date" value="2"/>
            <enum name="amount" value="3"/>
            <enum name="password_text" value="5"/>
            <enum name="password_number" value="4"/>
            <enum name="sheba" value="6"/>
            <enum name="card" value="7"/>
            <enum name="mobile" value="8"/>
        </attr>
    </declare-styleable>

</resources>
