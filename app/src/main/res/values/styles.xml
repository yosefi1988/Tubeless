<resources xmlns:tools="http://schemas.android.com/tools">


    <!--Theme-->
    <style name="AppDayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tubelessColor_blue_01</item>
        <item name="colorPrimaryDark">@color/tubelessColor_blue_01</item>
        <item name="colorAccent">@color/tubelessColor_blue_01</item>

        <item name="buttonStyle">@style/AppTheme.DayButton</item>
        <item name="android:buttonStyle">@style/AppTheme.DayButton</item>

        <item name="android:editTextStyle">@style/AppTheme.DayEditText</item>
        <item name="editTextStyle">@style/AppTheme.DayEditText</item>
    </style>
    <style name="AppNightTheme" parent="Theme.AppCompat.DayNight" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tubelessColor_blue_01</item>
        <item name="colorPrimaryDark">@color/tubelessColor_blue_01</item>
        <item name="colorAccent">@color/tubelessColor_blue_01</item>

        <item name="buttonStyle">@style/AppTheme.NightButton</item>
        <item name="android:buttonStyle">@style/AppTheme.NightButton</item>

        <item name="android:editTextStyle">@style/AppTheme.NightEditText</item>
        <item name="editTextStyle">@style/AppTheme.NightEditText</item>
    </style>


    <style name="TubelessDayTheme" parent="AppDayTheme">
        <item name="android:textViewStyle">@style/AppTheme.DayTextView</item>
    </style>









    <!--EditText-->
    <style name="AppTheme.DayEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textColorHint">@color/day_white_hint_text</item>
        <item name="android:textColor">@color/day_white_text</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="AppTheme.NightEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textColorHint">@color/night_white_hint_text</item>
        <item name="android:textColor">@color/night_white_text</item>
        <item name="android:textSize">20dp</item>
    </style>




    <!--TextView-->
    <style name="AppTheme.DayTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/day_white_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="AppTheme.NightTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/night_white_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17dp</item>
    </style>


    <!--Button-->
    <style name="AppTheme.NightButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/night_white_text</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="AppTheme.DayButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/day_white_text</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">18dp</item>
    </style>
























    <style name="NoActionBar" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TRANS_BACKListActivity" parent="NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Menu_Car_Picture_Show_Animation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="TranslucentSajjad" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/tubelessColor_blue_03</item>
        <item name="colorPrimaryDark">@color/tubelessColor_blue_01</item>
        <item name="colorAccent">@color/tubelessColor_blue_02</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="TranslucentSajjad2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--<item name="android:windowTranslucentStatus" >true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="alertDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/alert_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/alert_dialog_exit</item>
    </style>
</resources>
