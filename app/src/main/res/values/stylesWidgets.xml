<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Button-->
    <style name="AppTheme.DayButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/day_white_text</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NightButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/night_white_text</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">18dp</item>
    </style>


    <!--TextView-->
    <style name="AppTheme.DayTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tubelessColor_blue_02</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.NightTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/night_white_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="AppTheme.DayTextViewBigTitle" parent="AppTheme.DayTextView">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>




    <!--EditText-->
    <style name="AppTheme.DayEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>

        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textColorHint">@color/day_white_hint_text</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.NightEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textColorHint">@color/night_white_hint_text</item>
        <item name="android:textColor">@color/night_white_text</item>
        <item name="android:textSize">20dp</item>
    </style>



    <!-- This configures the styles for the text within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>
